<h1>{{services.name}}</h1>
{{#each services.provider}}
<div class="review-item">
  <p>{{this.firstName}}</p>
  <span>{{this.lastName}}</span>
</div>
{{/each}}
<p>{{services.description}}</p>

<a href="/services">Return</a>

<p>Add a review</p>
<form action="/reviews/add?services_id={{services._id}}" method="post">
  <label for="">User:</label>
  <input type="text" name="user">

  <label for="">Comments:</label>
  <textarea type="text" name="comments"></textarea>

  <button type="submit">ADD</button>
</form>

<h2>Reviews</h2>
{{#each services.reviews}}
<div class="review-item">
  <p>{{this.comments}}</p>
  <span>{{this.user}}</span>
</div>
{{/each}}